/* components/SEDialog.wxss */
@import '../iconfont/iconfont.wxss';
.se-dialog{
  transition: all 0.3s;
  position: absolute;
  top: 0;
  width: 100%;
  height: 100vh;
  z-index: 99999;
  background: rgba(00,00,00,.5);
  display: flex;
  flex-direction: column;
}
.dialog-box{
  width: 580rpx;
  /* height: 400rpx; */
  min-height: 280rpx;
  border-radius: 32rpx;
  background:#FFF;
  margin: 0 auto;
  margin-top: 300rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}
.title{
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
  margin: 0 auto;
  position: relative;
}
.icon-Share_2{
  position: absolute;
  right: 0;
  font-size: 40rpx;
  text-align: right;
}
.content{
  margin-top: 20rpx;
  padding: 0 30rpx;
}
.handle-btns{
  margin-top: 60rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 58rpx;
}
.btn{
  box-sizing: border-box;
  width: 200rpx;
  height: 83rpx;
  text-align: center;
  line-height: 83rpx;
  color: #FFFFFF;
  background: linear-gradient(180deg, #FBD30F 0%, #FCBE1A 100%);
  border-radius: 50rpx;
}
.left-btn{
  background: #fff;
  color: #FCC317;
  border: 1px solid #FCC317;
}