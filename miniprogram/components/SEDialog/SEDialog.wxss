/* components/SEDialog.wxss */
@import '../iconfont/iconfont.wxss';
.se-dialog{
  transition: all 0.3s;
  position: absolute;
  top: 0;
  width: 100%;
  height: 100vh;
  z-index: 99999;
  background: rgba(00,00,00,.5);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.dialog-box{
  width: 580rpx;
  height: auto;
  border-radius: 32rpx;
  background:#FFF;
  margin: 0 auto;
  padding: 50rpx 20rpx;
  padding-top: 25rpx;
  padding-bottom: 40rpx;
  display: flex;
  flex-direction: column;
}
.title{
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  font-weight: 500;
  color: #333333;
  margin: 0 auto;
  position: relative;
}
.icon-Share_2{
  position: absolute;
  right: 0;
  font-size: 40rpx;
  text-align: right;
}
.content{
  margin-top: 50rpx;
  padding: 0 30rpx;
  color:#666666 ;
  font-size: 16px;
  line-height: 24px;
  margin-bottom: 20rpx;
}
.input-box{
  margin: 0 auto;
  margin-top: 15rpx;
  width: 80%;
  padding-bottom: 12rpx;
  text-indent: 5rpx;
  border-bottom: 1px solid #eaf0fb;
}
  
.handle-btns{
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 58rpx;
}
.btn{
  box-sizing: border-box;
  width: 200rpx;
  height: 83rpx;
  text-align: center;
  line-height: 83rpx;
  color: #FFFFFF;
  background: linear-gradient(180deg, #FBD30F 0%, #FCBE1A 100%);
  border-radius: 50rpx;
}
.left-btn{
  background: #fff;
  color: #FCC317;
  border: 1px solid #FCC317;
}
.alert-btn{
  color: #FFFFFF;
  width: 100%;
  background: linear-gradient(180deg, #FBD30F 0%, #FCBE1A 100%);
}